<odoo>
    <record id="view_tax_group_tree" model="ir.ui.view">
        <field name="model">account.tax.group</field>
        <field name="inherit_id" ref="account.view_tax_group_tree" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="tax_ids" widget="many2many_tags" />
            </field>
            <xpath expr="//tree" position="attributes">
                <attribute name="editable" />
            </xpath>
        </field>
    </record>
    <record id="prestashop_binding_tax_group_form_view" model="ir.ui.view">
        <field name="model">account.tax.group</field>
        <field name="arch" type="xml">
            <form string="Account Tax Group">
                <group>
                    <field name="name" />
                    <field name="tax_ids" string="Taxes" widget="many2many_tags" />
                </group>
                <group string="PrestaShop Binding">
                    <field name="prestashop_bind_ids" nolabel="1" />
                </group>
            </form>
        </field>
    </record>
    <record id="account.action_tax_group" model="ir.actions.act_window">
        <field name="view_mode">tree,form</field>
        <field name="view_id" />
    </record>
    <menuitem
        action="account.action_tax_group"
        id="menu_action_tax_group_form"
        parent="account.account_account_menu"
    />
</odoo>
