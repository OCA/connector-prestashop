<odoo>

    <record id="account_tax_group_connector_prestashop_tree_view"
            model="ir.ui.view">
        <field name="model">prestashop.account.tax.group</field>
        <field name="arch" type="xml">
            <tree string="PrestaShop Account Tax Group" create="0">
                <field name="backend_id" string="Backend"/>
                <field name="prestashop_id"/>
            </tree>
        </field>
    </record>

    <record id="view_tax_group_tree" model="ir.ui.view">
        <field name="name">account.tax.group</field>
        <field name="model">account.tax.group</field>
        <field name="arch" type="xml">
            <tree string="Account Tax Group">
                <field name="name"/>
                <field name="tax_ids"/>
            </tree>
        </field>
    </record>

    <record id="prestashop_binding_tax_group_form_view"
            model="ir.ui.view">
        <field name="model">account.tax.group</field>
        <field name="arch" type="xml">
            <form string="Account Tax Group">
                <field name="name" colspan="4"/>
                <field name="tax_ids" colspan="4"/>
                <group string="PrestaShop Binding">
                    <field name="prestashop_bind_ids"
                           nolabel="1"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_tax_group_form" model="ir.actions.act_window">
        <field name="name">Tax Groups</field>
        <field name="res_model">account.tax.group</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="action_tax_group_form" id="menu_action_tax_group_form" parent="account.account_account_menu"/>

</odoo>
