<odoo>

    <record id="view_prestashop_backend_form" model="ir.ui.view">
        <field name="name">prestashop.backend.form.product_custom_info</field>
        <field name="model">prestashop.backend</field>
        <field name="inherit_id" ref="connector_prestashop.view_prestashop_backend_form"/>
        <field name="arch" type="xml">
            <group name="main_configuration" position="inside">
                <group string="Product">
                    <field name="product_custom_info_template_id" string="Custom Information Template"/>
                    <field name="product_custom_info_category_id" string="Custom Information Category"/>
                </group>
            </group>
            <xpath expr="//button[@name='import_products']/.." position="before">
                <group>
                    <div>
                        <label string="Import product features and values" class="oe_inline"/>
                    </div>
                    <button name="import_features_and_values" type="object" class="oe_highlight" string="Import in background" />
                </group>
            </xpath>
        </field>
    </record>

</odoo>
